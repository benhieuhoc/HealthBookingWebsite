<!-- MAKE AN APPOINTMENT -->
<section id="appointment" data-stellar-background-ratio="3">
    <div class="container">
        <div class="row">

            <div class="col-md-6 col-sm-6">
                <img src="images/date.jpg" class="img-responsive" alt>
            </div>
            
            <div class="col-md-6 col-sm-6">
                <!-- CONTACT FORM HERE -->
                <form method='POST' action='/order/create'>

                    <!-- SECTION TITLE -->
                    <div class="section-title wow fadeInUp"
                        data-wow-delay="0.4s">
                        <h2>Đặt lịch kiểm tra sức khỏe</h2>
                    </div>

                    <div class="wow fadeInUp"
                        data-wow-delay="0.8s">
                        <div class="col-md-6 col-sm-6">
                            <label for="name">Họ và tên</label>
                            <input type="text" class="form-control" id="name" name="name">
                        </div>

                        <div class="col-md-6 col-sm-6">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" name="email">
                        </div>

                        <div class="col-md-6 col-sm-6">
                            <label for="date">Chọn ngày</label>
                            <input type="date" name="date" value class="form-control">
                        </div>

                        <div class="col-md-6 col-sm-6">
                            <label for="select">Chọn khoa</label>
                            <select class="form-control" name="department">
                                {{#each department}}
                                    <option>{{this.name}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="col-md-12 col-sm-12">
                            <label for="telephone">Số điện thoại</label>
                            <input type="tel" class="form-control" id="phone" name="contact">
                            <label for="Message">Ghi chú</label>
                            <textarea class="form-control" rows="5" id="message" name="note"></textarea>
                            <button type="submit" class="form-control" id="cf-submit" >Đặt lịch</button>
                        </div>
                    </div>
                </form>
            </div>
            

        </div>
    </div>
</section>

