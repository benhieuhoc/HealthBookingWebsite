<form class='mt-4' method="Get" name="container-form" action="/admin/managerdoctor/">
  <div>
    <h3>Danh sách đặt lịch</h3>
  </div>
  <table class='table mt-4'>
    <thead>
      <tr>
        <th scope='col'>#</th>
        <th scope='col'>Tên bệnh nhân</th>
        <th scope='col' colspan="2">thời gian</th>
      </tr>
    </thead>
    <tbody>
      {{#each order}}
        <tr>
          <th scope='row'>{{sum @index 1}}</th>
          <td>{{this.name}}</td>
          <td>{{this.date}}</td>
          <td><a href='/order/detail/{{this._id}}' class='btn btn-link' >Chi tiết</a></td>
        </tr>
        {{else}}
        <tr>
          <td colspan="5" class="text-center">Ngày này khồn nằm trong lịch trực hoặc chưa có bệnh nhân nào đặt lịch trước</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</form>




